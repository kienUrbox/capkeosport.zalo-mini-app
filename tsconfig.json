{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2017",
    "module": "esnext",
    "jsx": "react-jsx",
    "lib": ["dom", "es2017"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
